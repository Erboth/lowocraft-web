// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")  // ðŸ‘‰ solo la referencia a la variable
}

model Personaje {
  id              Int      @id @default(autoincrement())
  nombre          String
  clase           String
  especializacion String
  rol             String
  etiqueta        String?
  fechaRegistro   DateTime @default(now())
}
