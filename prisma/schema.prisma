generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Personaje {
  id               Int      @id @default(autoincrement()) // ID único
  nombre           String                                 // Nombre del personaje
  clase            String                                 // Clase del personaje (e.g., paladín)
  especializacion  String                                 // Especialización elegida
  rol              String                                 // Rol calculado automáticamente
  etiqueta         String?                                // Etiqueta opcional: Roster25, Roster10, Alter
  fechaRegistro    DateTime @default(now())               // Fecha de creación automática
}
